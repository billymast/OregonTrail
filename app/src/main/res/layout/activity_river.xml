<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundedbutton"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/riverBackground1"
        android:layout_width="1334dp"
        android:layout_height="672dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-9dp"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/riverBackground2"
        android:layout_width="421dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="453dp"
        app:srcCompat="@android:drawable/screen_background_light" />

    <ImageView
        android:id="@+id/riverBackground3"
        android:layout_width="417dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="555dp"
        app:srcCompat="@android:drawable/screen_background_light" />

    <ImageView
        android:id="@+id/riverMainScreen"
        android:layout_width="1329dp"
        android:layout_height="364dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="272dp"
        tools:srcCompat="@drawable/riverpicture" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="383dp"
        android:layout_height="234dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="22dp"
        android:text="Continue"
        android:textSize="60sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/riverWidthText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="456dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="River Width: "
        android:textSize="40sp" />

    <TextView
        android:id="@+id/riverDepthText"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="560dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="River Depth:"
        android:textSize="40sp" />

    <Button
        android:id="@+id/riverFordButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="470dp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Ford the River"
        android:textSize="24sp" />

    <Button
        android:id="@+id/riverWaitButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="890dp"
        android:layout_marginTop="540dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Wait to See If Conditions Improve"
        android:textSize="24sp" />

    <Button
        android:id="@+id/riverFloatButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="890dp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Float Across the River"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/riverFerryButton"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="470dp"
        android:layout_marginTop="540dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Take the Ferry Across the River"
        android:textSize="24sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/afterRiverBackground"
        android:layout_width="891dp"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="418dp"
        android:visibility="gone"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/afterRiverText"
        android:layout_width="851dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/goldman"
        android:text="You have successfully forded the river."
        android:textSize="60sp"
        android:visibility="gone" />

</RelativeLayout>