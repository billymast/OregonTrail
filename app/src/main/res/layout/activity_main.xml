<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gamePlayText"
        android:layout_width="0dp"
        android:layout_height="345dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="15dp"
        android:text="GamePlay Text"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodText"
        app:layout_constraintEnd_toStartOf="@+id/dateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodText" />

    <Button
        android:id="@+id/nextDay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="25dp"
        android:text="Click to Continue"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/distanceText" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="12dp"
        android:text="Today's Date:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/weatherText"
        app:layout_constraintEnd_toStartOf="@+id/weatherText"
        app:layout_constraintStart_toEndOf="@+id/gamePlayText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:text="Weather:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/healthText"
        app:layout_constraintEnd_toStartOf="@+id/distanceText"
        app:layout_constraintStart_toEndOf="@+id/dateText"
        app:layout_constraintTop_toBottomOf="@+id/dateText" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="404dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="Health:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/foodText"
        app:layout_constraintStart_toStartOf="@+id/weatherText"
        app:layout_constraintTop_toBottomOf="@+id/weatherText" />

    <TextView
        android:id="@+id/foodText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Food:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/distanceText"
        app:layout_constraintEnd_toEndOf="@+id/healthText"
        app:layout_constraintStart_toEndOf="@+id/gamePlayText"
        app:layout_constraintTop_toBottomOf="@+id/healthText" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="74dp"
        android:text="Distance:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/nextDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherText"
        app:layout_constraintTop_toBottomOf="@+id/foodText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="117dp"
        app:layout_constraintEnd_toStartOf="@+id/nextDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hattie" />

</androidx.constraintlayout.widget.ConstraintLayout>