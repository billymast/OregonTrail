<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundedbutton"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/StatsBackground1"
        android:layout_width="349dp"
        android:layout_height="660dp"
        app:layout_constraintBottom_toTopOf="@+id/OptionsBackground"
        app:layout_constraintStart_toEndOf="@+id/gamePlayText"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/StatsBackground2"
        android:layout_width="297dp"
        android:layout_height="637dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/StatsBackground1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/screen_background_light" />

    <ImageView
        android:id="@+id/OptionsBackground"
        android:layout_width="1335dp"
        android:layout_height="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/MainScreen"
        android:layout_width="570dp"
        android:layout_height="200dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toTopOf="@+id/dateBackground"
        app:layout_constraintEnd_toStartOf="@+id/StatsBackground1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/gamePlayText"
        android:layout_width="1000dp"
        android:layout_height="233dp"
        android:background="#FFFFFF"
        android:text="GamePlay Text"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/OptionsBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextDay"
        android:layout_width="405dp"
        android:layout_height="81dp"
        android:background="#000000"
        android:text="Click to Continue"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gamePlayText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="173dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="128dp"
        android:text="Today's Date:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherText"
        android:layout_width="145dp"
        android:layout_height="31dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="172dp"
        android:text="Weather:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/StatsBackground1"
        app:layout_constraintTop_toBottomOf="@+id/dateTextChange" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="273dp"
        android:layout_height="28dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="130dp"
        android:text="Health:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/StatsBackground1"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/foodText" />

    <TextView
        android:id="@+id/foodText"
        android:layout_width="267dp"
        android:layout_height="27dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:text="Food Left:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/rationsText" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="141dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="176dp"
        android:text="Distance:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/StatsBackground1"
        app:layout_constraintTop_toBottomOf="@+id/weatherTempText" />

    <ImageView
        android:id="@+id/HattieCampbell"
        android:layout_width="243dp"
        android:layout_height="332dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hattie" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundedbutton"
        android:text="Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/guideButton"
        android:layout_width="108dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundedbutton"
        android:text="Guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapButton" />

    <Button
        android:id="@+id/statusButton"
        android:layout_width="105dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyButton" />

    <Button
        android:id="@+id/rationsButton"
        android:layout_width="105dp"
        android:layout_height="104dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedbutton"
        android:text="Rations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tradeButton" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="106dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/huntButton" />

    <Button
        android:id="@+id/tradeButton"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedbutton"
        android:text="Trade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statusButton" />

    <Button
        android:id="@+id/talkButton"
        android:layout_width="103dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Talk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restButton" />

    <Button
        android:id="@+id/restButton"
        android:layout_width="105dp"
        android:layout_height="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Rest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideButton" />

    <Button
        android:id="@+id/paceButton"
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Pace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rationsButton" />

    <Button
        android:id="@+id/huntButton"
        android:layout_width="105dp"
        android:layout_height="104dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Hunt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/talkButton" />

    <TextView
        android:id="@+id/dateTextChange"
        android:layout_width="256dp"
        android:layout_height="31dp"
        android:layout_marginStart="19dp"
        android:text="January 1, 1900"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/dateText" />

    <TextView
        android:id="@+id/weatherConditionText"
        android:layout_width="261dp"
        android:layout_height="29dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:text="Sunny"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/weatherText" />

    <TextView
        android:id="@+id/weatherTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Warm"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/weatherConditionText" />

    <TextView
        android:id="@+id/distanceLandmarkText"
        android:layout_width="263dp"
        android:layout_height="27dp"
        android:layout_marginStart="13dp"
        android:text="To Landmark:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/distanceText" />

    <TextView
        android:id="@+id/distanceTraveledText"
        android:layout_width="268dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:text="Traveled:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/distanceLandmarkText" />

    <TextView
        android:id="@+id/wagonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="237dp"
        android:text="Wagon:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/StatsBackground1"
        app:layout_constraintTop_toBottomOf="@+id/distanceTraveledText" />

    <TextView
        android:id="@+id/paceText"
        android:layout_width="268dp"
        android:layout_height="27dp"
        android:layout_marginStart="11dp"
        android:text="Pace: Normal"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/wagonText" />

    <TextView
        android:id="@+id/rationsText"
        android:layout_width="270dp"
        android:layout_height="27dp"
        android:layout_marginStart="9dp"
        android:text="Rations:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/StatsBackground2"
        app:layout_constraintTop_toBottomOf="@+id/paceText" />

    <ImageView
        android:id="@+id/dateBackground"
        android:layout_width="574dp"
        android:layout_height="83dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/gamePlayText"
        app:layout_constraintEnd_toStartOf="@+id/StatsBackground1"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="531dp"
        android:layout_height="53dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:text="Independence, Missouri"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gamePlayText"
        app:layout_constraintEnd_toEndOf="@+id/dateBackground" />

    <ImageView
        android:id="@+id/optionsBackground1"
        android:layout_width="1008dp"
        android:layout_height="648dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_dark" />

    <ImageView
        android:id="@+id/optionsBackground2"
        android:layout_width="984dp"
        android:layout_height="625dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/optionsBackground1"
        app:layout_constraintTop_toTopOf="@+id/optionsBackground1"
        app:srcCompat="@android:drawable/screen_background_light" />

    <Button
        android:id="@+id/normalPaceButton"
        android:layout_width="206dp"
        android:layout_height="192dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="222dp"
        android:background="@drawable/roundedbutton"
        android:text="Normal Pace"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/optionsBackground2"
        app:layout_constraintTop_toTopOf="@+id/optionsBackground2" />

    <Button
        android:id="@+id/strenuousPaceButton"
        android:layout_width="204dp"
        android:layout_height="192dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/roundedbutton"
        android:text="Strenuous Pace"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/normalPaceButton"
        app:layout_constraintTop_toTopOf="@+id/optionsBackground2" />

    <Button
        android:id="@+id/gruelingPaceButton"
        android:layout_width="206dp"
        android:layout_height="194dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/roundedbutton"
        android:text="Grueling Pace"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/strenuousPaceButton"
        app:layout_constraintTop_toTopOf="@+id/optionsBackground2" />

    <Button
        android:id="@+id/exitOptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="39dp"
        android:text="Exit"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/optionsBackground2"
        app:layout_constraintTop_toTopOf="@+id/optionsBackground2" />

</androidx.constraintlayout.widget.ConstraintLayout>